{
  "manifest_version": 2,

  "name": "OriginMonitor",
  "description": "originMonitor extension",
  "version": "1.0",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icon.png",
    "64": "icon.png"
  },

  "background": {
     "scripts": ["webrequest.js"]
  },
  "web_accessible_resources": [
      "images/bg.jpg"
  ],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["page.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "*://*/*"
  ]
}
